<div class="background">
    <h1><%= "#{@sneaker.brand}"%></h1>
    <h4><%= "#{@sneaker.model}"%></h4>
    <h6><%= "#{@user.location}"%></h6>
        <p><%= "#{number_to_currency @sneaker.price}"%></p>
        <p><%= "Seller: #{@user.first_name} #{@user.last_name}"%></p>
        <p><%= "Ad posted: #{@sneaker.updated_at}"%><p>
    <%if user_signed_in?%>    
        <p><%=link_to "Add to wishlist", add_to_wishlist_path(:id => @sneaker.id), method: :post %></p>
        <p><%= link_to "Message me!", conversations_path(sender_id: current_user.id, recipient_id: @user.id), method: "post"%></p>
    <%end%>
</div>

</div class="sneaker">
    <%= image_tag @sneaker.picture if @sneaker.picture.attached?%>
</div>



